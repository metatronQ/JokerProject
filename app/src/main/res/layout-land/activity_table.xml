<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table_board"
    tools:ignore="MissingDefaultResource">

    <com.example.jokerproject.custom_control.Croupier
        android:id="@+id/croupier"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="75%">

        <ImageView
            android:id="@+id/dealer"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:src="@drawable/back2" />

        <LinearLayout
            android:id="@+id/users_other"
            android:layout_marginTop="180dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.example.jokerproject.custom_control.MyTableUser
                android:id="@+id/user1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp" />

            <com.example.jokerproject.custom_control.MyTableUser
                android:id="@+id/user2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginTop="25dp"/>

            <com.example.jokerproject.custom_control.MyTableUser
                android:id="@+id/user3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginTop="40dp"/>

            <com.example.jokerproject.custom_control.MyTableUser
                android:id="@+id/user4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"/>

            <com.example.jokerproject.custom_control.MyTableUser
                android:id="@+id/user5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>
        </LinearLayout>


        <com.example.jokerproject.custom_control.MyTableUser
            android:id="@+id/server"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:layout_marginRight="120dp" />

        <com.example.jokerproject.custom_control.MyTableUserMine
            android:id="@+id/user_mine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"/>


    </com.example.jokerproject.custom_control.Croupier>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:layout_heightPercent="25%">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/jetton_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/jetton_1" />

            <ImageView
                android:id="@+id/jetton_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:src="@drawable/jetton_5" />

            <ImageView
                android:id="@+id/jetton_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:src="@drawable/jetton_10" />

            <ImageView
                android:id="@+id/jetton_50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:src="@drawable/jetton_50" />

            <ImageView
                android:id="@+id/jetton_100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:src="@drawable/jetton_100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                android:src="@drawable/cancel"/>

            <ImageView
                android:id="@+id/deal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:src="@drawable/deal"/>

            <ImageView
                android:id="@+id/check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/check" />

        </LinearLayout>
    </LinearLayout>
</androidx.percentlayout.widget.PercentRelativeLayout>